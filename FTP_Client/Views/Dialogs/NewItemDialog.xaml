<Window x:Class="FTP_Client.Views.Dialogs.NewItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FTP_Client.Views.Dialogs"
        xmlns:vm="clr-namespace:FTP_Client.ViewModels.Dialogs"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm:NewItemDialogViewModel}"
        Title="{Binding Title}"
        WindowStartupLocation="CenterOwner"
        SizeToContent="Height" Width="350"
        xmlns:helpers="clr-namespace:FTP_Client.Helpers" 
        Style="{StaticResource ModernDialogWindowStyle}"
        helpers:DialogCloser.DialogResult="{Binding DialogResult}">

    <StackPanel Margin="15">
        <TextBlock Text="{Binding Message}" />

        <TextBox Text="{Binding ItemName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0 5" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button Content="ОК" 
                    IsDefault="True" 
                    Command="{Binding OkCommand}" 
                    Style="{StaticResource PrimaryButton}"
                    Margin="0 0 10 0" />
            
            <Button Content="Отмена" 
                    IsCancel="True" 
                    Command="{Binding CancelCommand}" 
                    Style="{StaticResource SecondaryButton}" />
        </StackPanel>
    </StackPanel>
</Window>